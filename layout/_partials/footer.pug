div(class="status")
    div(class="copyright")
        - var copyright_year = date(null, 'YYYY')
        if theme.footer.since && theme.footer.since !== copyright_year
            != `&copy; ${theme.footer.since} -`
        span(itemprop="copyrightYear")
            != copyright_year
        span(class="with-love")
            i(class=`ic i-${ theme.footer.icon.name }`)
        span(class="author" itemprop="copyrightHolder")
            != `${author} @ ${ alternate?alternate:title}`
    if theme.footer.count
        div(class="count")
            span(class="post-meta-item-icon")
                i(class="ic i-chart-area")
            span(title=__('symbols_count_time.count_total'))
                != `${ symbolsCountTotal(site) } ${__('symbols_count_time.word')}`
            span(class="post-meta-divider")
                != " | "
            span(class="post-meta-item-icon")
                i(class="ic i-coffee")
            span(title=__('symbols_count_time.time_total'))
                != symbolsTimeTotal(site, config.symbols_count_time.awl, config.symbols_count_time.wpm, __('symbols_count_time.time_minutes'))
            //- span(id="timeDate")
            //- span(id="times")
    if theme.footer.powered
        div(class="powered-by")
            != __('footer.powered', _url('https://hexo.io', 'Hexo') + ' & Theme.' + _url('https://github.com/theme-shoka-x/hexo-theme-shokaX/', 'ShokaX'))
    if theme.footer.icp.enable
    br
    - var beianN = theme.footer.icp?.beian
    span(style="display:inline;height:20px;line-height:20px;margin: 0px 0px 0px 5px; color:var(--grey-5);")
        a(href="https://beian.miit.gov.cn")
            != beianN
        - var RC = theme.footer.icp?.recordcode
        if beianN && RC
            br
            a(target="_blank" href=`https://beian.mps.gov.cn/#/query/webSearch?code=${RC}`)
                img(loading="lazy" decoding="async" data-src=theme.statics + theme.assets + '/' + theme.footer.icp.icon style="max-width: 2em;display:inline;vertical-align: middle;" width="20" height="20" alt="备案")
                != theme.footer.icp.icpnumber
                | &nbsp;|&nbsp;
    if theme.footer.mengicp.enable
        span(style="display:inline;height:20px;line-height:20px;margin: 0px 0px 0px 5px; color:var(--grey-5);")
            a(href="https://icp.gov.moe/")
            - var beianN = theme.footer.mengicp?.beian, RC=theme.footer.mengicp?.icpnumber
            if beianN && RC
                a(target="_blank" href=`https://icp.gov.moe/?keyword=${RC}`)
                    img(loading="lazy" decoding="async" data-src=theme.statics + theme.assets + '/' + theme.footer.mengicp.icon style="max-width: 2em;display:inline;vertical-align: middle;" width="20" height="20" alt="备案")
                    != beianN
    != shokax_inject('status')
    if theme.footer.cdn.enable
        - var cdN = theme.footer.cdn?.cdn
        span(style="display:inline;height:20px;line-height:20px;margin: 0px 0px 0px 5px; color:var(--grey-5);")
            br 
            img(loading="lazy" decoding="async" data-src=theme.statics + theme.assets + '/' + theme.footer.cdn.icon style="max-width: 2em;display:inline;vertical-align: middle;" width="20" height="20" alt="cdN")
            != '本站由 ' + cdN + ' 提供cdn加速'

!= shokax_inject('footer')

